<%- include ('../partials/header.ejs') %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to the Library</h1>
            <p>View our hand-picked books from all over the world</p>
        <p>
            <a class="btn btn-primary btn-large" href="/book/new">Add New Books</a>
        </p>
        </div>
    </header>
</div>
<div class="container">
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% books.forEach(function(book){ %>
            <div class="col-md-4 col-sm-6">
                <div class="img-thumbnail">
                    <img src=" <%= book.image %> " style="max-width: 100%;">
                    <div id="a"class="caption">
                        <h4><%= book.name %></h4>
                    </div>
                    <p>
                        <a href="/book/<%= book.id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% });  %>
    </div>
</div>
<%- include ('../partials/footer.ejs') %>
