<%- include ('../partials/header.ejs') %>
<div class="container">
    <h1 style="text-align: center; margin:25px auto;">Editing : <%= book.name %></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/book/<%= book._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="book[name]" value="<%= book.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="book[price]" value="<%= book.price %>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="book[image]" value="<%= book.image %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="book[description]" value="<%= book.description %>">
            </div>
            <button class="btn btn-lg btn-primary btn-block" style="margin: 25px auto">Edit</button>
            </form>
            <a href="/book">Go Back</a>
        </div>
    </div>
</div>
<%- include ('../partials/footer.ejs') %>