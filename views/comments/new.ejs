<%- include ('../partials/header.ejs') %>
<div class="container">
    <h1 style="text-align: center; margin:25px auto;">Add  New Comment to<%= book.name %></h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/book/<%= book._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <button class="btn btn-lg btn-primary btn-block" style="margin: 25px auto">Submit!</button>
            </form>
            <a href="/book">Go Back</a>
        </div>
    </div>
</div>
<%- include ('../partials/footer.ejs') %>